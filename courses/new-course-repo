#!/bin/sh

cd `dirname $0`

repo="$1"

mkdir $repo && \
  cd $repo && \
  git init && \
  git config user.name   "trass autogenerated" && \
  git config user.email  "https://github.com/fizruk/trass" && \
  echo "$repo\n===\n\n" >README.md && \
  git add README.md && \
  git commit -m "initial commit"

